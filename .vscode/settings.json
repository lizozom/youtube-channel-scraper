{
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#d4ebf2",
        "activityBar.background": "#d4ebf2",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#da85c6",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#d4ebf2",
        "statusBar.background": "#add8e6",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#86c5da",
        "statusBarItem.remoteBackground": "#add8e6",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#add8e6",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#add8e699",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "python.formatting.provider": "none",
    // "python.defaultInterpreterPath": "${env:VIRTUAL_ENV}",
    "python.defaultInterpreterPath": "env/bin/python",
    // "python.venvPath": "./env/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "python.linting.pylintArgs": [
        "--init-hook",
        "import sys, os; sys.path.insert(0, os.path.join('.', 'env', 'lib', 'python3.8', 'site-packages'))",
        "--max-line-length=130",
        "--disable=C0114,C0116,C0115,W0718,C0103"
    ],
    "python.linting.flake8Args": [
        "--max-line-length=130",
        "--ignore=E402,E302"
    ],

}